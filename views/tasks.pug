extends layout

block content
  h1= Tasks
  p Welcome to #{title}
  h2 Register new user:
  form(action="#" method="post")
    input(type="text" name="title" placeholder="Title" required)
    input(type="text" name="description" placeholder="Description" required)
    input(type="text" name="startDate" placeholder="Start date" required)
    input(type="text" name="deadline" placeholder="Deadline" required)
    input(type="submit" value="Create task")

  each task in tasks
        div
          p Title: #{task.title}
          p Description: #{task.description}
          p Start date: #{task.startDate}
          p Deadline: #{task.deadline}
          p Status: #{task.status}
